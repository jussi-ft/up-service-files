[Unit]
Description=Subjects rw neo4j red Sidekick
BindsTo=subjects-rw-neo4j-red@%i.service
After=subjects-rw-neo4j-red@%i.service

[Service]
ExecStart=/bin/sh -c "\
  etcdctl set   /ft/services/subjects-rw-neo4j-red/healthcheck true; \
  etcdctl mkdir /ft/services/subjects-rw-neo4j-red/servers; \
  etcdctl set /ft/healthcheck/subjects-rw-neo4j-red-%i/path /__health; \
  while true; do \
    PORT=`[ $PORT ] && echo $PORT || echo $(/usr/bin/docker port subjects-rw-neo4j-red-%i 8080 | cut -d':' -f2)`; \
    etcdctl set /ft/services/subjects-rw-neo4j-red/servers/%i "http://$HOSTNAME:$PORT" --ttl 600; \
    sleep 120; \
  done"

ExecStop=/usr/bin/etcdctl rm /ft/services/subjects-rw-neo4j-red/servers/%i
Restart=on-failure
RestartSec=60

[X-Fleet]
MachineOf=subjects-rw-neo4j-red@%i.service


