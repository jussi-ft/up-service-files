[Unit]
Description=Synthetic Publication Monitor sidekick
BindsTo=synthetic-publication-monitor@%i.service
After=synthetic-publication-monitor@%i.service

[Service]
ExecStart=/bin/sh -c "\
  etcdctl set ft/services/synthetic-publication-monitor/healthcheck true; \
  etcdctl mkdir /ft/services/synthetic-publication-monitor/servers; \
  etcdctl set /ft/healthcheck/synthetic-publication-monitor-%i /__health; \
  while true; do \
    export PORT=$(echo $(/usr/bin/docker port synthetic-publication-monitor-%i 8080) | cut -d':' -f2); \
    etcdctl set /ft/services/synthetic-publication-monitor/servers/%i "http://$HOSTNAME:$PORT" --ttl 600; \
    sleep 120; \
  done"
ExecStop=/usr/bin/etcdctl rm /ft/services/synthetic-publication-monitor/servers/%i

[X-Fleet]
MachineOf=synthetic-publication-monitor@%i.service
