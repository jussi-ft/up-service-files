[Unit]
Description=Org API - neo4j
BindsTo=org-api-neo@%i.service
After=org-api-neo@%i.service

[Service]
ExecStart=/bin/sh -c "\
   while true; do \
    export PORT=$(echo $(/usr/bin/docker port org-api-neo-%i 8080) | cut -d':' -f2); \
    etcdctl set /ft/services/org-api-neo/servers/%i "http://$HOSTNAME:$PORT" --ttl 600; \
    sleep 120; \
  done"
ExecStop=/usr/bin/etcdctl rm /ft/services/org-api-neo/servers/%i
Restart=on-failure
RestartSec=60

[X-Fleet]
MachineOf=org-api-neo@%i.service
