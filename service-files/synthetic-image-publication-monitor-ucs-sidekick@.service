[Unit]
Description=Synthetic Image Publication Monitor UCS Sidekick
PartOf=synthetic-image-publication-monitor-ucs@%i.service
ReloadPropagatedFrom=synthetic-image-publication-monitor-ucs@%i.service
After=synthetic-image-publication-monitor-ucs@%i.service

[Service]
ExecStart=/bin/sh -c "\
  etcdctl set /vulcand/backends/synthetic-image-publication-monitor-ucs/backend '{\"Type\": \"http\"}'; \
  etcdctl set /vulcand/backends/synthetic-image-publication-monitor-ucs-%i/backend '{\"Type\": \"http\"}'; \
  etcdctl set /vulcand/frontends/synthetic-image-publication-monitor-ucs/frontend '{\"Type\": \"http\", \"BackendId\": \"synthetic-image-publication-monitor-ucs\", \"Route\": \"PathRegexp(`/.*`) && Host(`syn-pub-ucs`)\"}'; \
  etcdctl set /vulcand/frontends/synthetic-image-publication-monitor-ucs-health-%i/frontend '{\"Type\":\"http\", \"BackendId\":\"synthetic-image-publication-monitor-ucs-%i\", \"Route\":\"PathRegexp(`/health/synthetic-image-publication-monitor-ucs-%i/.*`)\"}'; \
  etcdctl set /vulcand/frontends/synthetic-image-publication-monitor-ucs-health-%i/middlewares/rewrite '{\"Id\":\"rewrite\", \"Type\":\"rewrite\", \"Priority\":1, \"Middleware\": {\"Regexp\":\"/health/synthetic-image-publication-monitor-ucs-%i(.*)\", \"Replacement\":\"$1\"}}'; \
  etcdctl set /ft/healthcheck/synthetic-image-publication-monitor-ucs-%i /__health; \
  while true; do \
    export PORT=$(echo $(/usr/bin/docker port synthetic-image-publication-monitor-ucs-%i 8080) | cut -d':' -f2); \
    etcdctl set /vulcand/backends/synthetic-image-publication-monitor-ucs/servers/srv%i \"{\\\"url\\\": \\\"http://$HOSTNAME:$PORT\\\"}\" --ttl 60; \
    etcdctl set /vulcand/backends/synthetic-image-publication-monitor-ucs-%i/servers/srv%i \"{\\\"url\\\": \\\"http://$HOSTNAME:$PORT\\\"}\" --ttl 60; \
    sleep 45; \
  done"
ExecStop=/usr/bin/etcdctl rm --recursive /vulcand/backends/synthetic-image-publication-monitor-ucs/servers/srv%i

[X-Fleet]
MachineOf=synthetic-image-publication-monitor-ucs@%i.service
