[Unit]
Description=Vulcand configuration builder.
Requires=docker.socket
After=docker.socket

[Service]
ExecStartPre=-/usr/bin/docker kill %p
ExecStartPre=-/usr/bin/docker rm %p
ExecStartPre=/bin/bash -c "/usr/bin/docker pull coco/vulcan-config-builder"
ExecStart=/bin/bash -c "/usr/bin/docker run --rm --name=%p -P -e ETCD_PEERS=$FOO coco/vulcan-config-builder"
ExecStopPost=-/usr/bin/docker rm -f %p
Restart=on-failure
RestartSec=60

[Install]
WantedBy=multi-user.target

