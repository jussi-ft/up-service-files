[Unit]
Description=MongoDB cluster configurator

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill %p-%i
ExecStartPre=-/usr/bin/docker rm %p-%i
ExecStartPre=/usr/bin/docker pull coco/mongodb-configurator
ExecStart=/bin/bash -c "docker run --rm --name %p-%i --env=\"PEERS=http://$HOSTNAME:4001\" coco/mongodb-configurator"
ExecStop=/usr/bin/docker stop -t 3 %p-%i

