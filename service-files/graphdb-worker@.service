[Unit]
Description=GraphDB Worker
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill %p-%i
ExecStartPre=-/usr/bin/docker rm %p-%i
ExecStartPre=/usr/bin/docker pull coco/graphdb-worker
ExecStart=/usr/bin/docker run --rm --name %p-%i -v /vol/graphdb-worker:/var/lib/data -P coco/graphdb-worker
ExecStop=/usr/bin/docker stop -t 3 %p-%i

[X-Fleet]
Conflicts=graphdb-??????@*.service
MachineMetadata=host_type=persistent
